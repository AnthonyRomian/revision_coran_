{% extends 'base.html.twig' %}

{% block title %}Se connecter!{% endblock %}

{% block body %}
    <div>{% include('include/nav.html.twig') %}</div>
    <form  class="my-2 col text-center" method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">Vous êtes déjà authentifier en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Se
                    deconnecter</a>
            </div>
        {% endif %}
        <h1 class="h3 mb-3 font-weight-normal text-center">Connectez vous</h1>
        <label class="m-2" for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mx-auto col-6 m-2"
               autocomplete="email" required autofocus>
        <label class="m-2" for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control mx-auto col-6 m-2" autocomplete="current-password"
               required>
        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}">
        {#Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html#}
        <div class="checkbox m-3">
            <label >
                <input class="mx-2"type="checkbox" name="_remember_me">Se souvenir de moi
            </label>
        </div>
        <button class="btn btn-success my-2" type="submit" >Se Connecter</button>
    </form>
{% endblock %}
