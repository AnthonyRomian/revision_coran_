{% extends 'base.html.twig' %}

{% block title %}Liste des révisions{% endblock %}

{% block body %}
    <div >{%  include('include/nav.html.twig') %}</div>
    <h3>liste des plannifications de révision</h3>


        <div class="d-flex flex-wrap m-2 center" >
    {% for e in utilisateur.etatDesLieux %}
            <div class="card flex-fill m-2" width="33%"  style="width: 20rem;">
                <div class="card-header justify-center">
                    <h5>{{ e.JoursDeDebut|format_datetime(locale='fr',pattern="EEEE dd MMMM YYYY") }}</h5>
                </div>
                <div class="card-body">
                    <h6>Sourate début : {{ e.sourateDebut }}</h6>
                    <h6>Verset de fin  : {{ e.sourateDebutVersetFin }}</h6>
                    <h6>Sourate Fin : {{ e.sourateFin }}</h6>
                    <h6>Verset de fin  : {{ e.sourateFinVersetFin }}</h6>
                </div>
                <div class="card-footer">
                    <a href="{{ path('resultat', {'id': e.id}) }}"><button class="btn btn-success mr-3">Acceder au plan de révision</button></a>

                </div>
            </div>
    {% endfor %}
        </div>



{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/js/sourate_verset_script.js') }}" type="text/javascript" ></script>

{% endblock %}
